<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/outerRelativeLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="60dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="5dp"
    android:clipToPadding="false"
    android:elevation="2dp"
    android:paddingHorizontal="7dp"
    android:paddingVertical="3dp">

    <TextView
        android:id="@+id/message_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="web|email|phone"
        android:breakStrategy="high_quality"
        android:linksClickable="true"
        android:maxWidth="250dp"
        android:paddingHorizontal="10dp"
        android:background="@drawable/my_msg"
        android:textColor="@color/colorTextIcons"
        android:textColorLink="@color/colorTextIcons"
        android:textIsSelectable="true"
        android:textSize="18sp"
        tools:text="Placeholder Text" />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/message_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/message_body"
        android:layout_alignStart="@id/message_body"
        android:layout_alignEnd="@id/message_body"
        android:layout_toEndOf="@id/message_body"
        android:elevation="2dp"
        android:scaleType="centerInside"
        android:layout_alignRight="@id/message_body"
        android:layout_alignLeft="@id/message_body"
        android:layout_toRightOf="@id/message_body" />

    <TextView
        android:id="@+id/timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="5dp"
        android:textColor="@color/colorTheirMsg"
        tools:text="PlaceHolder date"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp" />

</RelativeLayout>